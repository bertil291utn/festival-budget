<article class="timeline">
  <div class="pig-weights bg-light shadow-sm">
    <p> Savings amount</p>
    <p class="font-bold"><%= number_to_currency(sum(@transactions))%> </p>
  </div>
  <div class="container">
    <%@transactions.each do |t|%>
      <div class="card shadow-sm my-4">
        <div class="row no-gutters">
          <div class="col-5 p-4">
            <%if t.festival.imageok.exists?%>
              <%= image_tag t.festival.imageok.url,class:'card-img w-100' %>
            <% else %>
              <%= image_tag default_image,class:'default_image mx-auto' %>
            <%end%>
          </div>
          <div class="col-sm-7">
            <div class="card-body mt-4">
              <div class="d-flex justify-content-between">
                <h5 class="card-title"><%=t.description%></h5>
                <h6 class="font-bold"><%=number_to_currency(t.amount)%></h6>
              </div>
              <p class="card-text"><%=t.festival.name%> </p>
              <hr>
              <p class="card-text"><small class="text-muted card-date"><%= t.created_at.strftime("%d %b %Y")%></small></p>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</article>
<%= render 'fab_button' %></div>
