<h1>Login</h1>
<%= form_tag sessions_path do |form| %>
  <div class='row'>
    <div class='col-md-5'>
      <%= label_tag :username, 'Username: ' %>
      <%= text_field_tag :username, '', class: 'form-control'%>
    </div>
  </div>
  <div class='row pt-3'>
    <div class='col-md-5'>
      <%= submit_tag 'Login', class: 'btn btn-success w-100' %>
      <%= link_to 'Sign Up', signup_path, class: 'btn pt-3 w-100' %>
    </div>
  </div>
<% end %>
